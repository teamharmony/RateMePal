<?xml version='1.0' encoding='utf-8'?>
<widget id="com.prj.ratemepal" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RateMePal</name>
    <description>
        RateMePal
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        RateMePal
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
	<allow-navigation href="*" />
    <access origin="*" />
	<access origin="*.pushwoosh.com" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
	<preference name="AndroidPersistentFileLocation" value="Compatibility" />
	<preference name="SplashScreen" value="screen" />
	<preference name="SplashScreenDelay" value="10000" />
	<platform name="android">
		<allow-intent href="market:*" />
		<icon src="www/res/android/ldpi.png" density="ldpi" />
		<icon src="www/res/android/mdpi.png" density="mdpi" />
		<icon src="www/res/android/hdpi.png" density="hdpi" />
		<icon src="www/res/android/xhdpi.png" density="xhdpi" />

		<splash src="www/res/android/ldpi-port.png" density="port-ldpi"/>
		<splash src="www/res/android/mdpi-port.png" density="port-mdpi"/>
		<splash src="www/res/android/hdpi-port.png" density="port-hdpi"/>
		<splash src="www/res/android/xhdpi-port.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~4.1.1" />
</widget>
